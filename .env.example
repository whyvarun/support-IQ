# Database Configuration
DATABASE_URL=postgresql+asyncpg://supportiq:supportiq_pass@localhost:5432/supportiq_db
DATABASE_URL_SYNC=postgresql://supportiq:supportiq_pass@localhost:5432/supportiq_db

# Application Settings
APP_NAME=SupportIQ
DEBUG=True
API_PREFIX=/api/v1

# Model Settings
MINILM_MODEL=sentence-transformers/all-MiniLM-L6-v2
BERT_SENTIMENT_MODEL=nlptown/bert-base-multilingual-uncased-sentiment

# Search Configuration
SEMANTIC_WEIGHT=0.7
KEYWORD_WEIGHT=0.3
TOP_K_RESULTS=5

# Auto-Promotion Thresholds
L3_TO_L2_THRESHOLD=10
L2_TO_L1_THRESHOLD=25
MIN_FEEDBACK_SCORE=4.0

# Urgency Configuration  
CRITICAL_KEYWORDS=payment,security,breach,outage,down,emergency,critical
HIGH_URGENCY_KEYWORDS=error,failed,broken,urgent,asap
